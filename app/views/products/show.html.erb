<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
        <dl class="dl-horizontal">
          <dt><u>REVIEWS</u></dt>
          <dd></dd>
        </dl>
        <% @product.reviews.each do |review| %>
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= review.user.first_name %> <%= review.user.last_name[0] %>.</dd>
          <dt>Rating</dt>
          <dd><span><% review.rating.times do %><%= image_tag "star.svg", class: "review-star" %><% end %></span></dd>
          <% if !review.description.nil? %>
          <dt>Comments</dt>
          <dd><%= review.description %></dd>
          <% end %>
        </dl>
        <% end %>
      </div>
    </div>

  </article>

</section>
