<%= form_tag("/sessions", method: "post") do %>

  <div class="field">
    <%= label_tag(:email, "Email") %><br>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password, "Password" %><br>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>
